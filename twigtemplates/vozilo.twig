{% extends "base.twig" %}
{% set slug = _GET['1'] %}
{% set Car = fetch("Cars", {id:slug})[0] %}
{% block description %}{{Car.Marka}} {{Car.Model}}{% endblock %}
{% block content %}

	<div class="page-heading wow fadeIn" data-wow-duration="0.5s">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="heading-content-bg wow fadeIn" data-wow-delay="0.75s" data-wow-duration="1s">
						<div class="row">
							<div class="heading-content col-md-12">
								<p><a href="index.html">Homepage</a> / <em> Vozila</em> / <em> Detalji</em></p>
								<h2>{{Car.Marka}}  <em>{{Car.Model}}</em></h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="recent-car single-car wow fadeIn" data-wow-delay="0.5s" data-wow-duration="1s">
		<div class="container">
			<div class="recent-car-content">
				<div class="row">
					<div class="col-md-6">
						<div id="single-car" class="slider-pro">
							<div class="sp-slides">

                {% for image in Car.Galerija_ %}
								<div class="sp-slide">
                  <img class="sp-image" src="img/{{image.slug}}" alt="{{image.label}}">
                </div>
                {% endfor %}

							</div>

							<div class="sp-thumbnails">
                {% for image in Car.Galerija_ %}
                  <img class="sp-thumbnail" src="img/{{image.slug}}" alt="{{image.label}}">
                {% endfor %}
							</div>
					    </div>
					</div>
					<div class="col-md-6">
						<div class="car-details">
							<h4>{{Car.Marka}} {{Car.Model}}</h4>
							<span>{{ Car.Cena|number_format(0, ',', ' ') }} eur</span>
							<p style="white-space: pre-wrap;">{{Car.Opis}}</p>
							<div class="container">
								<div class="row">
									<ul class="car-info col-md-6">
										<li><i class="flaticon flaticon-calendar"></i><p>{{ Car.Godiste }}</p></li>
										<li><i class="flaticon flaticon-speed"></i><p>{{ Car.Karoserija_label }}</p></li>
										<li><i class="flaticon flaticon-road"></i><p>{{ Car.Kilometraza }} km</p></li>
										<li><i class="flaticon flaticon-fuel"></i><p>{{ Car.Gorivo }}</p></li>
									</ul>
									<ul class="car-info col-md-6">
										<li><i class="flaticon flaticon-art"></i><p>{{ Car.Boja }}</p></li>
										<li><i class="flaticon flaticon-shift"></i><p>{{ Car.Menjac_label }}</p></li>
										<li><i class="flaticon flaticon-car"></i><p>{{ Car.Vrata }}</p></li>
										<li><i class="flaticon flaticon-motor"></i><p>{{ Car.Kubikaza }} cm<sup>3</sup></p></li>
									</ul>
								</div>
							</div>
              <!--
							<div class="similar-info">
								<div class="primary-button">
									<a href="single_car.html#">Add Offer <i class="fa fa-dollar"></i></a>
								</div>
							</div>
              -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<section>
		<div class="more-details">
			<div class="container">
				<div class="row">
